pipeline {
    agent any
    tools {
        maven 'Maven 3.3.9'
        jdk 'jdk8'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Build') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true install'
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml'
                }
            }
        }

        stage('SonarQube Analysis') {
                    steps {
                        withSonarQubeEnv('ServerNameSonar') {
                            sh 'mvn clean verify sonar:sonar -Dsonar.projectKey=FirstDemo -Dsonar.projectName='FirstDemo' -Dsonar.host.url=http://192.168.0.131:9000' //port 9000 is default for sonar
                            echo 'SonarQube Analysis Completed'
                        }
                    }
        }


    }
}
